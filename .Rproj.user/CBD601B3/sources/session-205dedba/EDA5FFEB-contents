lmodmbt <- lapply(lmodmbt, function(x){
  return(x[x$gamma>=10,])
})
ns <- unlist(lapply(lmodmbt, nrow))

# remove failed stats with NA everywhere
lmodmbt <- lapply(lmodmbt, function(x){
  return(x[,apply(x,2,function(l){all(!is.na(l))})])
})

